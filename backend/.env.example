# Copy this file to .env and fill in real values (DO NOT COMMIT SECRETS)

# Runtime
NODE_ENV=production
PORT=3000
TRUST_PROXY=1

# App Secrets
JWT_SECRET=change_me_to_a_long_random_string
ADMIN_SECRET=change_me_to_another_long_random_string

# URLs (Adjust to your domains)
BACKEND_URL=https://api.example.com
FRONTEND_URL=https://app.example.com

# Email (Gmail with App Password or your SMTP provider)
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password

# Booking/Code reset boundary hour (0-23)
RESET_BOUNDARY_HOUR=6
