# Copy this file to .env and fill in real values (DO NOT COMMIT SECRETS)

# Runtime
NODE_ENV=production
PORT=3000
TRUST_PROXY=1

# App Secrets
JWT_SECRET=change_me_to_a_long_random_string
ADMIN_SECRET=change_me_to_another_long_random_string

# URLs (Adjust to your domains)
BACKEND_URL=https://api.example.com
FRONTEND_URL=https://app.example.com

# Email (Brevo / Sendinblue - HTTP API)
# Generate API key (v3) at https://app.brevo.com → SMTP & API → Create API key
BREVO_API_KEY=your_brevo_api_key
# Single Sender: set an email you've verified in Brevo as sender
EMAIL_FROM=your_verified_sender@example.com
# Optional: shown as name in emails (default: ระบบจองสนามกีฬา)
EMAIL_SENDER_NAME=ระบบจองสนามกีฬา
# Optional reply-to address
# EMAIL_REPLY_TO=support@yourdomain.com

# (Optional) Resend fallback (if you want)
# RESEND_API_KEY=your_resend_api_key

# Booking/Code reset boundary hour (0-23)
RESET_BOUNDARY_HOUR=6
